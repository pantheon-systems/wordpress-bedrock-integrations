{
    "name": "pantheon-systems/wordpress-bedrock-integrations",
    "description": "Add this project to any WordPress install based on pantheon-systems/wordpress-bedrock-recommend to enable it for use on Pantheon.",
    "type": "project",
    "license": "MIT",
    "version": "1.0.0",
    "require": {
        "pantheon-systems/quicksilver-pushback": "^2",
        "roots/wp-password-bcrypt": "^1.0.0",
        "wpackagist-plugin/lh-hsts": "^1.25",
        "wpackagist-plugin/pantheon-advanced-page-cache": ">=0.3.0",
        "wpackagist-plugin/wp-native-php-sessions": ">=0.6.9",
        "wp-coding-standards/wpcs": "^1.2.1"
    },
    "require-dev": {
        "behat/mink-goutte-driver": "^1.2.1",
        "brain/monkey": "^2.2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "dmore/behat-chrome-extension": "^1.2",
        "genesis/behat-fail-aid": "^2.1",
        "paulgibbs/behat-wordpress-extension": "^3.3.0",
        "phpunit/phpunit": "^7.5.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.4.0",
        "wp-coding-standards/wpcs": "^1.2.1"
    },
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "web/app/mu-plugins/loader.php": {
                    "mode": "replace",
                    "path": "loader.php",
                    "overwrite": true
                },
                "web/wp/pantheon.upstream.yml": {
                    "mode": "replace",
                    "path": "pantheon.upstream.yml",
                    "overwrite": true
                },
                "web/wp-cli.yml": {
                    "mode": "replace",
                    "path": "wp-cli.yml",
                    "overwrite": true
                }
            }
        }
    }
}
